generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String?
  exercicios Exercicio[]
}

model Exercicio {
  id        Int     @id @default(autoincrement())
  name      String?
  tipo      String?
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  perna     Perna?  @relation(fields: [pernaId], references: [id])
  pernaId   Int?
  braco     Braco?  @relation(fields: [bracoId], references: [id])
  bracoId   Int?
}

model Perna {
  id          Int         @id @default(autoincrement())
  description String?
  sub         Json
  exercicios  Exercicio[]
}

model Braco {
  id          Int         @id @default(autoincrement())
  description String?
  sub         Json
  exercicios  Exercicio[]
}
