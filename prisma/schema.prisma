generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  trainings Training[]
}

model Category {
  id        Int                  @id @default(autoincrement())
  name      Json
  exercises CategoryToExercise[]
}

model Exercise {
  id         Int                  @id @default(autoincrement())
  name       String
  img        String?
  categories CategoryToExercise[]
  trainings  Training[]
}

model CategoryToExercise {
  categoryId Int
  exerciseId Int
  category   Category @relation(fields: [categoryId], references: [id])
  exercise   Exercise @relation(fields: [exerciseId], references: [id])

  @@id([categoryId, exerciseId])
}

model Training {
  id         Int      @id @default(autoincrement())
  type       String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  exerciseId Int
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
}
